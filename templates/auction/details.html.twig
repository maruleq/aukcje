{% extends 'base.html.twig' %}

{% block body %}
    {# Szczegóły aukcji #}
    <div class="card p-3">
        <div class="card-header p-4">
            <h4>{{ auction.title }}</a></h4>
        </div>
        <div class="card-body">
            <p class="card-text">{{ auction.description}}</p>               
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Cena: {{ auction.price }} PLN</li>
            <li class="list-group-item">Cena wywoławcza: {{ auction.startingPrice }} PLN</li>
            <li class="list-group-item">Zakończenie aukcji: {{ auction.expiresAt | date('Y-m-d H:i:s') }}</li>
        </ul>
    </div> 
    
    {# Grupa przycisków do zarządzania aukcją #}
    <a href="{{ url('auction_index') }}"><button type="button" class="btn btn-primary float-left">Powrót</button></a>
    <a href="{{ url('auction_edit', {'id': auction.id}) }}"><button type="button" class="btn btn-warning float-left">Edytuj</button></a>
    {# Przycisk "Usuń" zabezpieczony formularzem #}
    {{ form_start(deleteForm, {'attr': {'class': 'float-left'}}) }}
        {{ form_widget(deleteForm.submit, {'attr': {'class': 'btn-danger'}}) }}
        {{ form_rest(deleteForm) }}
    {{ form_end(deleteForm) }}
    {# Przycisk "Zakończ" zabezpieczony formularzem #}
    {{ form_start(finishForm, {'attr': {'class': 'float-left'}}) }}
        {{ form_widget(finishForm.submit, {'attr': {'class': 'btn-dark'}}) }}
        {{ form_rest(finishForm) }}
    {{ form_end(finishForm) }}
    
    <div class="clearfix"></div>

{% endblock %}
