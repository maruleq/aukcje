{% extends 'base.html.twig' %}

{% block body %}
    {# Szczegóły aukcji #}
    <div class="card p-3">
        <div class="card-header p-4">
            <h4>{{ auction.title }}</a></h4>
        </div>
        <div class="card-body">
            <p class="card-text">{{ auction.description}}</p>               
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Cena: {{ auction.price }} PLN</li>
            <li class="list-group-item">Cena wywoławcza: {{ auction.startingPrice }} PLN</li>
            <li class="list-group-item">Zakończenie aukcji: {{ auction.expiresAt | date('Y-m-d H:i:s') }}</li>
        </ul>
    </div>
    {# Lista złożonych ofert #}
    <div class="card p-3">
        <ul class="list-group list-group-flush">
            {% for offer in auction.offers %}
                <li class="list-group-item">Oferta {{ offer.price }} PLN, złożona dnia {{ offer.createdAt | date('Y-m-d H:i:s') }}</li>
            {% endfor %}
        </ul>
    </div>    
    
    {# Grupa przycisków do zarządzania aukcją #}
    {% if is_granted("ROLE_USER") %}
        <div class="card">
            <div class="card-body">
                {# Przycisk "Kup" i "Licytuj" zabezpieczone formularzem #}
                <div class="input-group">
                    {{ form_start(bidForm, {"attr": {"novalidate": "novalidate"}}) }}
                    <div class="input-group">
                        {{ form_widget(bidForm.price) }}
                        <span class="input-group-prepend">
                            {{ form_widget(bidForm.submit) }}
                        </span>
                    </div>
                    {{ form_end(bidForm) }}

                    {{ form_start(buyForm) }}
                    {{ form_widget(buyForm.submit, {"attr": {"class": "btn-success", "style": "margin-left: 6px"}}) }}
                    {{ form_rest(buyForm) }}
                    {{ form_end(buyForm) }}
                    {{ form_rest(bidForm) }}
                    <a class="btn btn-info" style="margin-left: 5px" href="{{ path('auction_index') }}">Wróć</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    {% endif %}
{% endblock %}
