{% extends 'base.html.twig' %}

{% block body %}
    {# Szczegóły aukcji #}
    <div class="card p-3">
        <div class="card-header p-4">
            <h4>{{ auction.title }}</a></h4>
        </div>
        <div class="card-body">
            <p class="card-text">{{ auction.description}}</p>               
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Cena: {{ auction.price }} PLN</li>
            <li class="list-group-item">Cena wywoławcza: {{ auction.startingPrice }} PLN</li>
            <li class="list-group-item">Zakończenie aukcji: {{ auction.expiresAt | date('Y-m-d H:i:s') }}</li>
        </ul>
    </div>
    {# Lista złożonych ofert #}
    <div class="card p-3">
        <ul class="list-group list-group-flush">
            {% for offer in auction.offers %}
                <li class="list-group-item">Oferta {{ offer.price }} PLN, złożona dnia {{ offer.createdAt | date('Y-m-d H:i:s') }}</li>
            {% endfor %}
        </ul>
    </div>    
    
    {# Grupa przycisków do zarządzania aukcją #}
    <a href="{{ url('auction_index') }}"><button type="button" class="btn btn-primary float-left">Powrót</button></a>
    
    {# Przycisk "Kup" zabezpieczony formularzem #}
    {{ form_start(buyForm, {'attr': {'class': 'float-left'}}) }}
        {{ form_widget(buyForm.submit, {'attr': {'class': 'btn-success'}}) }}
        {{ form_rest(buyForm) }}
    {{ form_end(buyForm) }}
    
    <div class="clearfix"></div>
    
    {# Przycisk "Licytuj" zabezpieczony formularzem #}
    {{ form(bidForm, {'attr': {'novalidate': 'novalidate'}}) }}

{% endblock %}
