{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="card p-3" style="margin-bottom: 15px">
    <div class="card-body">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="form-group">
                <label class="sr-only-focusable" for="username">Login</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>

            <div class="form-group">
                <label class="sr-only-focusable" for="password">Hasło</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>

            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Zapamiętaj mnie</label>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="Zaloguj" />
            </div>
        </form>
    </div>
</div>
