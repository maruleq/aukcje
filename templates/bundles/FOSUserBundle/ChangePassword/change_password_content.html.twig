{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

<div class="card p-3" style="margin-bottom: 15px">
    <div class="card-body">
        <div class="form-group">
            <label class="sr-only-focusable">Aktualne hasło</label>
            {{ form_widget(form.current_password) }}
        </div>

        <div class="form-group">
            <label class="sr-only-focusable">Nowe hasło</label>
            {{ form_widget(form.plainPassword.first) }}
        </div>

        <div class="form-group">
            <label class="sr-only-focusable">Potwierdź hasło</label>
            {{ form_widget(form.plainPassword.second) }}
        </div>

        <div>
            <input class="btn btn-primary" type="submit" value="Zmień hasło" />
        </div>
    </div>
</div>

{{ form_end(form) }}
